<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head.ejs') %>
    <nav class="navbar navbar-expand-lg navbar-light">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">
                <h1 class="display-2 text-light">PFT</h1>
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-end align-center" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link active indexnav fs-4 text-light" href="/credit">All Credit Expenses</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <section id="form">

        <div class='container'>
            <div class="text-center">
                <h1 class="mt-3">New Credit Expense</h1>
                <p class="lead"> Expense Info</p>
            </div>
            <div class="row justify-content-center my-5">
                <div class="col-lg-6">
                    <form action="/credit" method="POST">

                        <label class='form-label' for="name">Transaction Name</label>
                        <div class="mb-4 input-group">
                            <span class="input-group-text">
                                <i class="bi bi-bag-check"></i>
                            </span>
                            <input placeholder="Chipotle ..." type="text" class="form-control" name="name" id="name" />
                        </div>

                        <label class='form-label' for="date">Transaction Date</label>
                        <div class="mb-4 input-group">
                            <span class="input-group-text">
                                <i class="bi bi-calendar-check"></i>
                            </span>
                            <input placeholder=" 1/1/21..." type="text" class="form-control" name="date" id="date" />
                        </div>

                        <label class='form-label' for="amt">Amount</label>
                        <div class="mb-4 input-group">
                            <span class="input-group-text">
                                <i class="bi bi-currency-dollar"></i>
                            </span>
                            <input placeholder="12.00..." type="text" class="form-control" name="amount" id="amt" />
                        </div>

                        <label class='form-label' for="des">Description</label>
                        <textarea id="des" name="description" placeholder="Optional ..." class="form-control"
                            style="height: 140px;"></textarea>
                        <div class="text-center mt-3">
                            <input type="submit" class='btn btn-primary btn-lg' value="Add Expense" />
                        </div>
                    </form>
                </div>
            </div>

        </div>

    </section>>

</html>