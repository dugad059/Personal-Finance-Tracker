<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head.ejs')  %>
<body>
    <nav class="navbar navbar-expand-lg navbar-light">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">
                <h1 class="display-2 text-light">PFT</h1>
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-end align-center" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link indexnav active fs-4 text-light me-3" aria-current="page"
                            href="/credit/new">New
                            Credit Expense</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active indexnav fs-4 text-light" href="/">PFT Dashboard</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>


    <div class='container-fluid'>
        <h1 class='text-center mt-3 mb-5'>All Credit Expenses</h1>
    </div>
    <ul style='list-style-type: none;'>
        <% allCredits.forEach(credit=> { %>
            <li class="border border-3 rounded-3 me-5 mt-3">
                <div class="container mt-5">
                    <div class="row">
                        <div class='date col-md-1 col-4'>
                            <a href="/credit/<%= credit._id %> " style='text-decoration: none; color: black;'>
                                <%= credit.date; %>
                            </a>
                        </div>
                        <div class='name col-md-5 col-4'>
                            <a href="/credit/<%= credit._id %> " style='text-decoration: none; color: black;'>
                                <%= credit.name; %>
                            </a>
                        </div>
                        <div class='amt col-md-2 col-4 '>
                            <a href="/credit/<%= credit._id %> " style='text-decoration: none; color: black;'>
                                $<%= credit.amount; %>
                            </a>
                        </div>
                        <!-- BUTTONS -->
                        <div class='amt col-md-1 d-none d-sm-block text-center btn btn-outline-secondary mb-4'>
                            <a href="/credit/<%= credit._id %> " style='text-decoration: none; color: black;'>
                                Details
                            </a>
                        </div>
                        <div class='edit col-md-1 d-none d-sm-block text-center btn btn-outline-primary mb-4'>
                            <a href="/credit/<%=credit._id %>/edit" style='color: black; text-decoration: none;'>Edit</a>
                        </div>
                        <div class='del col-md-1 d-none d-sm-block text-center btn btn-outline-danger mb-4' style>
                            <form action='/credit/<%= credit._id %>?_method=DELETE' method='POST'>
                                <input class='del-text' type="submit" value="Delete"
                                    style='border: none; background: none;' />
                            </form>
                        </div>
                        <!-- xs icons -->
                        <div class="container mt-3">
                            <div class="row">
                                <div class='amt col-4 d-block d-sm-none text-center btn btn-outline-secondary mb-4'>
                                    <a href="/credit/<%= credit._id %> " style='text-decoration: none; color: black;'>
                                        Details
                                    </a>
                                </div>
                                <div class='edit col-4 d-block d-sm-none text-center btn btn-outline-primary mb-4'>
                                    <a href="/credit/<%=credit._id %>/edit" style='color: black; text-decoration: none;'>
                                        <i class="bi bi-pencil-square"></i></a>
                                </div>
                                <div class='del col-4 d-block d-sm-none text-center btn btn-outline-danger mb-4'>
                                    <form action='/credit/<%= credit._id %>?_method=DELETE' method='POST'>
                                        <input class='del-text' type="submit" value="Delete"
                                            style='border: none; background: none;' />
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </li>
            <% }) %>
    </ul>
</body>

</html>