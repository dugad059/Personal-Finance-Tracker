<!DOCTYPE html>
<html lang="en">
<%- include('./partials/head.ejs') %>


    <header class='show-header'>
        <div class='show-header-h1'>
            <a href="/expenses" class='header-a'>
                <h1>PFT</h1>
            </a>
        </div>
        <div class='show-header-new'>
            <a href="/expenses/new" class='header-a'>New Expense</a>
        </div>
        <div class='show-header-home'>
            <a href="/expenses" class='header-a'>All Expenses</a>
        </div>
    </header>

    <body>
        <div class='cont-show'>
            <h1 class='new-h1'>Expense Detail</h1>
            <fieldset class='show-info'>
                <legend class='show-leg'>
                    <%= expense.name %>
                </legend>
                <label class='new-label'  for="date">Transaction Date:</label>
                <p id="date-show">
                    <%= expense.date %>
                </p>
                <label class='new-label'  for="amt-show">Amount:</label>
                <p id="amt">
                    $ <%= expense.amount %>
                </p>
                <label class='new-label'  for="des">Description:</label>
                <p id="des">
                    <%= expense.description %>
                </p>
            </fieldset>
            
                <a href="/expenses/<%=expense._id %>/edit" style='text-decoration: none; color: black;'>
                    <button class='show-edit-submit'> Edit Expense  </button>
                </a>
           
        </div>
    </body>

</html>









