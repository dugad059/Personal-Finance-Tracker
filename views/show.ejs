<!DOCTYPE html>
<html lang="en">
<%- include('./partials/head.ejs') %>


    <header class='show-header'>
        <div class='show-header-h1'>
            <a href="/expenses" class='header-a'>
                <h1>PFT</h1>
            </a>
        </div>
        <div class='show-header-new'>
            <a href="/expenses/new" class='header-a'>New Expense</a>
        </div>
        <div class='idx-header-home'>
            <a href="/expenses" class='header-a'>All Expenses</a>
        </div>
    </header>

    <body>
        <h2 class='show-all-exp-title'>Expense Detail</h2>
        <div class='show-cont'>
            <h3>
                <%= expense.name %>
            </h3>
            <p>Transaction Date: <%= expense.date %>
            </p>
            <p>Amount: $ <%= expense.amount %>
            </p>
            <p>Description: <%= expense.description %>
            </p>
        </div>

        <div class='show-header-edit'>
            <button class='show-edit-btn'>
            <h3>
                <a href="/expenses/<%=expense._id %>/edit" class='header-a'>Edit Expense</a>
            </h3>
        </button>
        </div>
    </body>

</html>